    "publicIpEnabled": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Whether public IP address is assigned to the VM."
      }
    },
    "dnsLabelPrefix": {
      "type": "string",
      "defaultValue": "[parameters('prefix')]",
      "metadata": {
        "description": "Unique DNS Name for the Public IP used to access the Virtual Machine. Not required if public IP is not used."
      }
    }
